import React from "react";
import ReactDOM from "react-dom";

const data = {
  content: {
    body: [{
      QuestionId: 8,
      Question: "What color was the suspect's bottoms?",
      TypeTag: "Bottoms",
      Options: [
        {
          Text: "Black",
          Color: "Black",
          AnswerType: "Bottoms",
          NextQuestionId: -1,
        },
        {
          Text: "Red",
          Color: "Red",
          AnswerType: "Bottoms",
          NextQuestionId: -1,
        },
        {
          Text: "Blue",
          Color: "Blue",
          AnswerType: "Bottoms",
          NextQuestionId: -1,
        }
      ]
    }]
  }
}

function Character(props) {
  return <img src={props.body} />;
}

function Question(props) {
  return (
    <div>
      <div>{props.question}</div>
    </div>
    );
}

function Option(props) {
  return (
    <button>
      <div>{props.option.Text}</div>
    </button>
  );
}

let q = 0;

class Window extends React.Component {
  constructor(props) {
    super(props);
    this.body="https://ichef.bbci.co.uk/news/410/cpsprodpb/2D73/production/_105153611_suspect1.jpg";
    this.question = data.content.body[q].Question;
    this.options = data.content.body[q].Options;
    q++;
  }
  
  createOptions() {
    return this.options.map(function(option) {
            return <Option option={option} />
    });
  }
  
  render() {
    return (
      <div>
        <div className="character">
          <Character 
            body={this.body} 
          />
        </div>
        <div className="question">
          <Question 
            question={this.question}
          />
        </div>
        <div className="options">
          {this.createOptions()}
        </div>
      </div>
    )
  }
}


const rootElement = document.getElementById("root");
ReactDOM.render(<Window />, rootElement);


